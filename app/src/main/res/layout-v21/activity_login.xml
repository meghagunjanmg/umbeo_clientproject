<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp">
            </ImageView>
            <TextView
                android:padding="12dp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Welcome Back "
                android:textAlignment="center"
                android:textColor="@color/colorTextSecondary"
                android:textSize="32dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="You are one step away from dicovering" />

            <TextView
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="the best around you" />
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No./Email Address*"
                android:textStyle="bold"
                />
            <EditText
                android:layout_margin="8dp"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter E-mail Address*"/>

            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"/>

            <EditText
                android:layout_margin="8dp"
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />

            <TextView
                android:layout_margin="8dp"
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <Button
                android:layout_margin="8dp"
                android:id="@+id/button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/active"
                android:fontFamily="sans-serif"
                android:text="Sign In"
                android:textStyle="bold"
                app:cornerRadius="20dp"/>

            <TextView
                android:id="@+id/forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="forgot your password?" />
            <LinearLayout
                android:padding="8dp"
                android:id="@+id/belowme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingTop="4dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/facebook"
                    android:layout_width="250dp"
                    android:layout_height="57dp"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="@color/colorWhite"
                    app:icon="@drawable/facebook"
                    app:iconPadding="4dp"
                    app:iconTint="@color/empty"
                    android:text="Login with Facebook"
                    app:cornerRadius="20dp"
                    app:iconSize="20dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="250dp"
                    android:layout_height="57dp"
                    android:textColor="@color/colorTextSecondary"
                    android:backgroundTint="@color/colorWhite"
                    app:icon="@drawable/googlelogo"
                    app:iconPadding="4dp"
                    app:iconTint="@color/empty"
                    android:text="Connect with Google"
                    app:cornerRadius="20dp"
                    app:iconSize="20dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />
            </LinearLayout>

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Don't have an Account?  " />

            <TextView
                android:gravity="center"
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sign Up"
                android:textColor="@color/active" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
