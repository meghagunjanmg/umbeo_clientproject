<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/light_grey"
        android:id="@+id/card"
        app:cardElevation="2dp"
        app:cardCornerRadius="16dp"
        android:layout_width="160dp"
        android:layout_height="240dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_marginTop="30dp"
                android:id="@+id/staryberry_image"
                android:src="@drawable/strawberry"
                android:layout_width="100dp"
                android:layout_height="100dp">
            </ImageView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_plus"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="end"
                    android:padding="4dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/orange"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        android:tint="@color/colorWhite">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:gravity="end"
                android:background="@color/light_grey"
                android:id="@+id/item_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                    <ImageView
                        android:layout_gravity="end"
                        android:id="@+id/item_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_add"
                        android:tint="@color/orange">
                    </ImageView>

                <TextView
                    style="@style/TextViewStyleHeading"
                    android:id="@+id/item_quant"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textStyle="bold">
                </TextView>

                    <ImageView
                        android:layout_gravity="end"
                        android:id="@+id/item_remove"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_remove"
                        android:tint="@color/orange">
                    </ImageView>

            </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/strawberry_name"
                style="@style/TextViewStyleHeading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLines="3"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Strawberry"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:maxLines="3"
                style="@style/TextViewStyleNormal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Strawberry"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="4dp"
                    android:id="@+id/price"
                    style="@style/TextViewStyleHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="$5"
                    android:letterSpacing="0.09"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="24sp"
                    android:textStyle="bold" />


            </LinearLayout>
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/crossed"
        style="@style/TextViewStyleSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="$6"
        android:background="@drawable/line_cross"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText" />
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/saved"
                    style="@style/TextViewStyleSubHeading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save $1"
                    android:fontFamily="@font/gilroybold"
                    android:textColor="@color/green_dark" />
    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>