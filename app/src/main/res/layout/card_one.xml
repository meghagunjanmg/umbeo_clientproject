<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:layout_weight="1"
                    style="@style/TextViewStyleHeading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Early Starter"
                    android:textColor="@color/colorPrimaryText" />
                <FrameLayout
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/circular1"
                        android:padding="4dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:tint="@color/dark_blue"
                        android:src="@drawable/circle" />
                    <ImageView
                        android:id="@+id/gem1"
                        android:padding="4dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_crystal" />
                </FrameLayout>

                <TextView
                    style="@style/TextViewStyleSubHeading"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100 crystals" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:visibility="gone"
            android:id="@+id/text1"
            style="@style/TextViewStyleNormal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Complete your first transaction to get this reward"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>