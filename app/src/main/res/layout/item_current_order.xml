<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:backgroundTint="@color/main"
        android:background="@drawable/bg_cardview"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextViewStyleSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items"
            />

        <TextView
            android:id="@+id/products"
            style="@style/TextViewStyleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"

            android:text="1 x dairymilk, 1 x frazen food, Sauce"
            />

        <TextView
            style="@style/TextViewStyleSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Ordered ON"
      />

        <TextView
            android:id="@+id/time"
            style="@style/TextViewStyleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="12 Jan 2020 at 7:30 PM"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Total Amount"
            style="@style/TextViewStyleSubHeading" />

        <TextView
            android:id="@+id/amount"
            style="@style/TextViewStyleNormal"
            android:layout_width="match_parent"
            android:textColor="@color/grey"
            android:layout_height="wrap_content"
            android:text="$ 8"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Delivery Instruction"
            style="@style/TextViewStyleSubHeading"
            />

        <TextView
            android:id="@+id/instruction"
            style="@style/TextViewStyleNormal"
            android:layout_width="match_parent"
            android:textColor="@color/grey"
            android:layout_height="wrap_content"
            android:text="Instruction"
            android:textStyle="bold" />

        <TextView
            style="@style/TextViewStyleSubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Status"
         />

        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/Waiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Request sent to the shop"
            style="@style/TextViewStyleSubHeading"
            />

        <include layout="@layout/item_status_bar"></include>
        <LinearLayout

            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                style="@style/TextViewStyleSubHeading"
                android:id="@+id/cancel"
                android:layout_weight="3"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="Cancel Order"
                android:textColor="@color/colorPrimaryText"
                app:cornerRadius="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" />
            <ImageView
                android:id="@+id/call_btn"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_phone"
                android:padding="8dp"
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>