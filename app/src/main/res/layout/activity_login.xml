<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bg_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".login">
    <ImageView
        android:id="@+id/back_btn"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="@color/colorPrimaryText"
        android:layout_gravity="center_vertical"
        android:layout_width="30dp"
        android:layout_height="30dp">
    </ImageView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="16dp"
            android:src="@drawable/shoppingcart"
            android:layout_gravity="center"
            android:layout_width="85dp"
            android:layout_height="85dp">
        </ImageView>
    <TextView
        android:padding="4dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/TextViewStyleHeading"
        android:gravity="center"
        android:text="Welcome Back "
        android:textAlignment="center"
        android:textColor="@color/colorTextSecondary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/TextViewStyleSubHeading"
        android:text="You are one step away from dicovering" />

    <TextView
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/TextViewStyleSubHeading"
        android:text="the best around you" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile No./Email Address*"
        style="@style/TextViewStyleSubHeading" />
    <EditText
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/username"
        android:maxLines="1"
        android:layout_width="match_parent"
        style="@style/TextViewStyleNormal"
        android:layout_height="wrap_content"
        android:hint="Enter E-mail Address*"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewStyleSubHeading"
        android:text="Password" />

    <EditText
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:maxLines="1"
        style="@style/TextViewStyleNormal"
        android:inputType="textPassword" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/main2"
            style="@style/TextViewStyleHeading"
            android:text="Sign In"
            app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextViewStyleNormal"
        android:text="forgot your password?" />
    <LinearLayout
        android:id="@+id/belowme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="4dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebook"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp"
            android:fontFamily="@font/fon"
            android:backgroundTint="@color/colorWhite"
            app:icon="@drawable/facebook"
            app:iconPadding="4dp"
            app:iconTint="@color/empty"
            android:text="Login with Facebook"
            app:cornerRadius="20dp"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            />
        <com.google.android.gms.common.SignInButton
            style="@style/TextViewStyleHeading"
            android:id="@+id/google_sign_in_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:textColor="@color/colorTextSecondary"
            android:backgroundTint="@color/colorWhite"
            app:icon="@drawable/googlelogo"
            app:iconPadding="4dp"
            android:fontFamily="@font/fon"
            android:textSize="14sp"
            app:iconTint="@color/empty"
            android:text="Connect with Google"
            app:cornerRadius="20dp"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />
    </LinearLayout>
<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        style="@style/TextViewStyleNormal"
        android:text="Don't have an Account?  " />

    <TextView
        android:gravity="center"
        android:id="@+id/signin"
        style="@style/TextViewStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Sign Up"
        android:textColor="@color/main2" />
</LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
