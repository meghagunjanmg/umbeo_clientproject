<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <FrameLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_btn"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/colorPrimaryText"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Fruits"
            android:textColor="@color/colorPrimaryText"
            style="@style/TextViewStyleHeading"
            android:textStyle="bold" />
            <ImageView
                android:id="@+id/cart_btn"
                android:src="@drawable/ic_cart"
                android:layout_gravity="end"
                android:tint="@color/colorPrimaryText"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
        </FrameLayout>
        <AutoCompleteTextView
            android:imeOptions="actionDone"
            android:inputType="text"
            android:id="@+id/search"
            android:background="@drawable/search_outline"
            style="@style/TextViewStyleNormal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:drawablePadding="8dp"
            android:hint="Search"
            android:maxLines="1"
            android:singleLine="true">
        </AutoCompleteTextView>
    </LinearLayout>


    <TextView
        android:visibility="invisible"
        android:layout_weight="2"
        android:id="@+id/editAddress"
        android:drawableLeft="@drawable/location"
        android:drawableTint="@color/main"
        android:drawablePadding="8dp"
        android:text="Address"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <ScrollView
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_height="120dp"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/title_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/farmers" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@color/semidark" />

        </FrameLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:id="@+id/strawberry"
            android:background="@drawable/bg_card"
            android:backgroundTint="@color/main"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/staryberry_image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strawberry_icon"/>
            <LinearLayout
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/strawberry_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strawberry"
                    android:textSize="16sp"
                    android:textColor="@color/main"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"

                        android:text="₹60"
                        android:background="@drawable/line_cross"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:text="₹50"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"

                    android:textColor="@color/colorPrimaryText"
                    android:layout_height="wrap_content"
                    android:text="Save ₹10"
                    android:paddingTop="8dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/strawberry_plus"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/main"
                android:src="@drawable/ic_add"/>
            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/strawberry_linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove"
                    android:tint="@color/main"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_remove">
                </ImageView>
                <TextView
                    android:padding="8dp"
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="1">
                </TextView>
                <ImageView
                    android:id="@+id/add"
                    android:tint="@color/main"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add">
                </ImageView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:id="@+id/lichi"
            android:backgroundTint="@color/main"
            android:background="@drawable/bg_card"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/lichi_image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lichi_icon"/>
            <LinearLayout
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lichi"
                    android:textSize="16sp"
                    android:textColor="@color/main"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹60"

                        android:textColor="@color/colorPrimaryText"
                        android:background="@drawable/line_cross"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"

                        android:text="₹50"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"

                    android:text="Save ₹10"
                    android:paddingTop="8dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/lichi_plus"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/main"
                android:src="@drawable/ic_add"/>
            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/lichi_linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove1"
                    android:tint="@color/main"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_remove">
                </ImageView>
                <TextView
                    android:padding="8dp"
                    android:id="@+id/quantity1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="1">
                </TextView>
                <ImageView
                    android:id="@+id/add1"
                    android:tint="@color/main"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add">
                </ImageView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card"
            android:backgroundTint="@color/main"

            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/fruit_image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange_icon"/>
            <LinearLayout
                android:id="@+id/orange"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fruit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orange"
                    android:textSize="16sp"
                    android:textColor="@color/main"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"

                        android:text="₹60"
                        android:background="@drawable/line_cross"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹50"
                        android:textColor="@color/colorPrimaryText"

                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"

                    android:text="Save ₹10"
                    android:paddingTop="8dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/orange_plus"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/main"
                android:src="@drawable/ic_add"/>
            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/orange_linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove3"
                    android:tint="@color/main"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_remove">
                </ImageView>
                <TextView
                    android:padding="8dp"
                    android:id="@+id/quantity3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="1">
                </TextView>
                <ImageView
                    android:id="@+id/add3"
                    android:tint="@color/main"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add">
                </ImageView>

            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/main"
                android:visibility="invisible" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="8dp"
                android:layout_marginBottom="100dp"
                app:spanCount="2"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:id="@+id/item_recycler"
                tools:listitem="@layout/item_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>