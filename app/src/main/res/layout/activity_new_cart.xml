<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="60dp"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:text="Cart"
            android:textColor="@color/colorPrimaryText"
            style="@style/TextViewStyle"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:visibility="gone"
                android:id="@+id/Del"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery At : "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"/>
            <EditText
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/location"
                android:drawableTint="@color/main"
                android:drawablePadding="12dp"
                android:hint="Address"
                android:textColorHint="@color/colorPrimaryText"
                style="@style/TextViewStyle"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:tint="@color/main"
                android:layout_gravity="center"
                android:id="@+id/editAddress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pen" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/no_item_linear"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/no_item"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="There are no items in your cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
        <Button
            android:backgroundTint="@color/main"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:id="@+id/shop"
            android:gravity="center"
            android:text="Start Shopping"
            android:layout_marginBottom="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:background="@color/bg_color"
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/item_detail_cart"></include>


            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub total"
                    style="@style/TextViewStyle"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/subtotal"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 1"
                    style="@style/TextViewStyle"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_marginTop="8dp"
                    style="@style/TextViewStyle"
                    android:textSize="14sp"
                    android:id="@+id/loyalty"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Redeem Crystals (100 crystal = $ 1)"
                    android:textColor="@color/colorTextSecondary"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/loyalty_point"
                    android:gravity="center_vertical|end"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="- $ 1"
                    android:textColor="@color/colorTextSecondary"
                    style="@style/TextViewStyle"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery"
                style="@style/TextViewStyle"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:id="@+id/delivery_card"
               android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_margin="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delivery Address"
                                style="@style/TextViewStyle"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryText" />
                            <TextView
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delivery Address: "
                                style="@style/TextViewStyle"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <TextView
                            android:layout_weight="2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:id="@+id/change_add"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Change"
                            android:gravity="end|center"
                            style="@style/TextViewStyle"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/main" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Slot"
                        style="@style/TextViewStyle"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryText" />
                 <include layout="@layout/time_slots"></include>
                    <LinearLayout
                        android:layout_margin="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:textColor="@color/lightgrey"
                            style="@style/TextViewStyle"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/delivery_charges"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ 1"
                            android:textColor="@android:color/black"
                            style="@style/TextViewStyle"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taxes &amp; Charges"
            android:textColor="@color/lightgrey"
            style="@style/TextViewStyle"
            android:textSize="14sp"
            android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GST\nHST"
                android:textColor="@color/lightgrey"
                style="@style/TextViewStyle"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
        <TextView
            android:gravity="end"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 1"
            android:textColor="@android:color/black"
            style="@style/TextViewStyle"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discounts"
            android:textColor="@color/lightgrey"
            style="@style/TextViewStyle"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:gravity="end"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 1"
            android:textColor="@android:color/black"
            style="@style/TextViewStyle"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grand Total"
            style="@style/TextViewStyle"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/grand_total"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 1"
            android:textColor="@android:color/black"
            style="@style/TextViewStyle"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


            <TextView
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:id="@+id/note"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="Please note after placing the order on \n cancelation charges might apply"
                android:textColor="@color/lightgrey"
                android:textSize="14sp" />

            <Button
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:id="@+id/payment"
                style="@style/TextViewStyle"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to pay"
                android:backgroundTint="@color/main"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</LinearLayout>