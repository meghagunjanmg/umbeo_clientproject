<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_linear"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="50dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/welcome"
                android:gravity="start"
                android:text="Welcome"
                android:textColor="@color/colorPrimaryText"
                style="@style/TextViewStyle"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/login"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans"
                android:layout_gravity="end|bottom"
                android:text="Log in / Signup"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                android:textStyle="bold">
            </TextView>
        </FrameLayout>
    </LinearLayout>

        <EditText
            android:id="@+id/search"
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_outline"
            android:drawableLeft="@drawable/ic_search"
            android:drawableTint="@color/colorPrimaryText"
            android:hint="Search"
            android:drawablePadding="8dp"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:singleLine="true"
            android:textColorHint="@color/colorTextSecondary"
            android:textSize="14sp"
            android:paddingLeft="12dp">
        </EditText>
    </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_scroll"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/category_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_categoty">
                    </androidx.recyclerview.widget.RecyclerView>
                    <me.angeldevil.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/popular_txt"
                            style="@style/TextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feature_card"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Recommended"
                            android:textColor="@color/main"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/feature_txt"
                            style="@style/TextViewStyle"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feature_card"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Feature"
                            android:textColor="@color/main"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/trending_txt"
                            style="@style/TextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feature_card"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Trending"
                            android:textColor="@color/main"
                            android:textSize="12sp" />

                    </LinearLayout>



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ProgressBar
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:id="@+id/simpleProgressBar"
                        android:indeterminateTint="@color/main"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/item_recycler"
                        app:spanCount="1"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        tools:listitem="@layout/item_card">
                    </androidx.recyclerview.widget.RecyclerView>

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/list_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_category_card">

                    </androidx.recyclerview.widget.RecyclerView>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>


        </androidx.core.widget.NestedScrollView>
</LinearLayout>