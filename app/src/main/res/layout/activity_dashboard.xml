<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".dashboard">
    <LinearLayout
        android:orientation="vertical"
        android:padding="4dp"
        android:paddingBottom="12dp"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:id="@+id/addre"
            android:drawableLeft="@drawable/location"
            android:drawableTint="@color/green"
            android:drawablePadding="8dp"
            android:text="Address"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_weight="1"
            android:id="@+id/login"
            android:gravity="end"
            android:text="Log in / Signup"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <EditText
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="8dp"
        android:hint="Search"
        android:textColorHint="@color/colorTextSecondary"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="@color/green"
        android:background="@drawable/search_outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:background="@color/grey"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/grey"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:id="@+id/Cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categories"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"

                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cat1"
                                android:layout_margin="4dp"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/green"
                                app:cardCornerRadius="20dp">

                                <LinearLayout
                                    android:layout_margin="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="end"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/iconmapfood" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Food &amp; Drinks"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cat2"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/green"
                                app:cardCornerRadius="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="end"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/personal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Personal healthcare"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cat3"
                                android:layout_margin="4dp"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/green"
                                app:cardCornerRadius="20dp">

                                <LinearLayout
                                    android:layout_margin="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="end"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/beauty" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Beauty &amp; fashion"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cat4"
                                android:layout_margin="4dp"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/green"
                                app:cardCornerRadius="20dp">

                                <LinearLayout
                                    android:layout_margin="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="end"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/kids" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Kids &amp; babies"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>


                    <me.angeldevil.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>

                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:id="@+id/recommendations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recommendations"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                        <LinearLayout
                            android:padding="4dp"
                            android:background="@color/colorWhite"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/bg_feature_card"
                                    android:id="@+id/feature_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Feature"
                                    android:textColor="@color/green"
                                    android:textSize="12sp" />

                            <TextView
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:background="@drawable/bg_feature_card"
                                android:id="@+id/trending_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Trending"
                                android:textColor="@color/green"
                                android:textSize="12sp" />
                            <TextView
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:background="@drawable/bg_feature_card"
                                android:id="@+id/popular_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Popular"
                                android:textColor="@color/green"
                                android:textSize="12sp" />

                        </LinearLayout>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:visibility="gone"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:background="@drawable/card_item"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/strawberry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/staryberry_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/strawberry_icon" />

                                <LinearLayout
                                    android:layout_width="86dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="₹50"
                                        android:textColor="@color/colorPrimaryText"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/line_cross"
                                        android:text="₹60"
                                        android:textColor="@color/colorPrimaryText" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="8dp"
                                        android:text="Save ₹10"
                                        android:textColor="@color/colorPrimaryText" />


                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/strawberry_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="Strawberry"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <FrameLayout
                                android:id="@+id/strawberry_plus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:background="@drawable/ic_extended"
                                android:padding="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="12dp"
                                    android:text="ADD"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="right|center"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/ic_add"
                                    android:tint="@color/colorWhite"></ImageView>
                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/strawberry_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/remove"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_remove"
                                    android:tint="@color/green"></ImageView>

                                <TextView
                                    android:id="@+id/quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp"
                                    android:text="1"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"></TextView>

                                <ImageView
                                    android:id="@+id/add"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_add"
                                    android:tint="@color/green"></ImageView>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/lichi"
                        android:backgroundTint="@color/green"
                        android:background="@drawable/bg_card"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/lichi_image"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lichi_icon"/>
                        <LinearLayout
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lichi"
                                android:textSize="16sp"
                                android:textColor="@color/green"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹60"

                                    android:textColor="@color/colorPrimaryText"
                                    android:background="@drawable/line_cross"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimaryText"

                                    android:text="₹50"
                                    android:paddingLeft="10dp"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"

                                android:text="Save ₹10"
                                android:paddingTop="8dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/lichi_plus"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tint="@color/green"
                            android:src="@drawable/ic_add"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:gravity="center"
                            android:id="@+id/lichi_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/remove1"
                                android:tint="@color/green"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_remove">
                            </ImageView>
                            <TextView
                                android:padding="8dp"
                                android:id="@+id/quantity1"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="1">
                            </TextView>
                            <ImageView
                                android:id="@+id/add1"
                                android:tint="@color/green"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add">
                            </ImageView>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_card"
                        android:backgroundTint="@color/green"

                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/fruit_image"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/orange_icon"/>
                        <LinearLayout
                            android:id="@+id/orange"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/fruit_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Orange"
                                android:textSize="16sp"
                                android:textColor="@color/green"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimaryText"

                                    android:text="₹60"
                                    android:background="@drawable/line_cross"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="₹50"
                                    android:textColor="@color/colorPrimaryText"

                                    android:paddingLeft="10dp"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"

                                android:text="Save ₹10"
                                android:paddingTop="8dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/orange_plus"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tint="@color/green"
                            android:src="@drawable/ic_add"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:gravity="center"
                            android:id="@+id/orange_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/remove3"
                                android:tint="@color/green"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_remove">
                            </ImageView>
                            <TextView
                                android:padding="8dp"
                                android:id="@+id/quantity3"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="1">
                            </TextView>
                            <ImageView
                                android:id="@+id/add3"
                                android:tint="@color/green"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add">
                            </ImageView>

                        </LinearLayout>

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        android:id="@+id/item_recycler"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_fruits_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>