<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_card"
    android:padding="4dp"
    android:backgroundTint="@color/green"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/lichi_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lichi_icon"/>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:text="₹60"
                    android:background="@drawable/line_cross"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:text="₹50"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimaryText"
                android:layout_height="wrap_content"
                android:text="Save ₹10"
                android:paddingTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/lichi_name"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Lichi"
            android:textSize="16sp"
            android:textColor="@color/green"/>

        <ImageView
            android:layout_margin="8dp"
            android:visibility="visible"
            android:id="@+id/lichi_plus"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/green"
            android:src="@drawable/ic_add"/>
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/lichi_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remove1"
                android:tint="@color/green"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_remove">
            </ImageView>
            <TextView
                android:padding="8dp"
                android:id="@+id/quantity1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:text="1">
            </TextView>
            <ImageView
                android:id="@+id/add1"
                android:tint="@color/green"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add">
            </ImageView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>