<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/green_dark"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:layout_weight="1"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sparkling Star"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/circular2"
                        android:padding="4dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:tint="@color/green_darker"
                        android:src="@drawable/circle" />
                    <ImageView
                        android:id="@+id/gem2"
                        android:padding="4dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/new_three_crystal" />
                </FrameLayout>


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="500 crystals"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:visibility="gone"
            android:id="@+id/text2"
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Complete 10 transactions in a month to get this reward"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>